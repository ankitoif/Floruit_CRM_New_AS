@model ErrorViewModel
@{
    ViewData["Title"] = "Oops! Something went wrong";
}

<div class="container mt-5">
    <div class="text-center">
        <i class="bi bi-exclamation-triangle-fill text-danger display-1"></i>
        <h1 class="text-danger mt-3">Oops! An error occurred.</h1>
        <p class="lead text-muted">We’re sorry, but something went wrong while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p class="mt-3">
                <strong>Request ID:</strong>
                <code class="text-dark">@Model.RequestId</code>
            </p>
        }

        <a href="javascript:history.back()" class="btn btn-outline-primary mt-4 me-2">Go Back</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">Go to Home</a>
    </div>

    <hr class="my-5" />

    <div class="alert alert-warning">
        <h4 class="alert-heading">Development Mode Info</h4>
        <p>
            To view detailed error information, switch the environment to <strong>Development</strong> mode.
            This should only be used during local debugging as it may expose sensitive data.
        </p>
        <p class="mb-0">
            Set the <code>ASPNETCORE_ENVIRONMENT</code> environment variable to <strong>Development</strong> and restart the application.
        </p>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}
