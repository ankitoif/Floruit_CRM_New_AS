@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Inactive Account";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100 bg-light">
    <div class="alert alert-warning shadow-lg text-center w-50 rounded-3">
        <h4 class="alert-heading">
            <i class="bi bi-person-x-fill me-2"></i>Inactive Account
        </h4>
        <p>Your account is currently inactive and cannot be used to log in.</p>
        <hr />
        <p class="mb-0">Please contact the administrator to activate your account.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-warning mt-3 px-4">
            <i class="bi bi-arrow-left me-1"></i>Back to Login
        </a>
    </div>
</div>
