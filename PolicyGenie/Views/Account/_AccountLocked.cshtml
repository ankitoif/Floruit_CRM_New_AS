@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Account Locked";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100 bg-light">
    <div class="alert alert-danger shadow-lg text-center w-50 rounded-3">
        <h4 class="alert-heading">
            <i class="bi bi-lock-fill me-2"></i>Account Locked
        </h4>
        <p>Your account has been locked due to multiple failed login attempts.</p>
        <hr />
        <p class="mb-0">Please contact the administrator to unlock your account.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-danger mt-3 px-4">
            <i class="bi bi-arrow-left me-1"></i>Back to Login
        </a>
    </div>
</div>
